.wrapper
  .side-bar
    .side-bar__header
      .side-bar__header--box
        .side-bar__header--box--name
          = current_user.name
        %ul.side-bar__header--box--lists
          %li.list
            = link_to new_group_path do
              %i.fa.fa-edit
          %li.list
            = link_to edit_user_path(current_user) do
              %i.fa.fa-cog
    .groups
      - current_user.groups.each do |group|
        .groups__main
          = link_to group_messages_path(group) do
            .groups__main--name
              = group.name
            .groups__main--message
              = group.show_last_message
